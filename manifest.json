{
  "manifest_version": 3,
  "name": "Dyslexia Support Tool",
  "version": "1.0",
  "permissions": [
    "activeTab", 
    "scripting", 
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["fonts/OpenDyslexic-Regular.otf"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
  "service_worker": "background.js"
}
}